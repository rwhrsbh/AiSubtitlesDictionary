{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.2",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "alarms",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://generativelanguage.googleapis.com/*",
    "*://rezka.ag/*",
    "*://*.voidboost.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "src/content/i18n_lib.js",
        "src/content/subtitle_renderer.js",
        "src/content/youtube_injector.js",
        "src/content/word_popup.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://rezka.ag/*"
      ],
      "js": [
        "src/content/i18n_lib.js",
        "src/content/subtitle_renderer.js",
        "src/content/rezka_injector.js",
        "src/content/word_popup.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icon.png",
      "48": "src/assets/icon.png",
      "128": "src/assets/icon.png"
    }
  },
  "icons": {
    "16": "src/assets/icon.png",
    "48": "src/assets/icon.png",
    "128": "src/assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/network_interceptor.js",
        "src/review/review.html",
        "src/definition-cards/definition-cards.html",
        "src/services/translations.js"
      ],
      "matches": [
        "*://www.youtube.com/*",
        "*://*/*"
      ]
    }
  ]
}